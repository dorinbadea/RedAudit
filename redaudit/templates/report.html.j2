<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>RedAudit Report - {{ target }}</title>
    <style>
        :root {
            --bg-dark: #1a1d23;
            --bg-card: #22262e;
            --text-primary: #e4e6eb;
            --text-secondary: #a0a3a8;
            --accent-red: #e74c3c;
            --accent-orange: #f39c12;
            --accent-yellow: #f1c40f;
            --accent-blue: #3498db;
            --accent-gray: #7f8c8d;
            --accent-green: #2ecc71;
            --border-color: #3a3f47;
        }
        * { box-sizing: border-box; margin: 0; padding: 0; }
        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, sans-serif;
            background: var(--bg-dark);
            color: var(--text-primary);
            line-height: 1.6;
            padding: 2rem;
        }
        .container { max-width: 1400px; margin: 0 auto; }
        header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2rem;
            padding-bottom: 1rem;
            border-bottom: 1px solid var(--border-color);
        }
        h1 { font-size: 1.8rem; color: var(--accent-red); }
        .meta { color: var(--text-secondary); font-size: 0.9rem; }
        .cards { display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 1rem; margin-bottom: 2rem; }
        .card {
            background: var(--bg-card);
            border-radius: 8px;
            padding: 1.2rem;
            border: 1px solid var(--border-color);
        }
        .card-title { font-size: 0.85rem; color: var(--text-secondary); margin-bottom: 0.5rem; }
        .card-value { font-size: 2rem; font-weight: 700; }
        .charts { display: grid; grid-template-columns: repeat(auto-fit, minmax(400px, 1fr)); gap: 1.5rem; margin-bottom: 2rem; }
        .chart-container { background: var(--bg-card); border-radius: 8px; padding: 1.5rem; border: 1px solid var(--border-color); }
        .chart-title { font-size: 1rem; margin-bottom: 1rem; color: var(--text-secondary); }
        table { width: 100%; border-collapse: collapse; margin-bottom: 2rem; }
        th, td { padding: 0.75rem 1rem; text-align: left; border-bottom: 1px solid var(--border-color); }
        th { background: var(--bg-card); color: var(--text-secondary); font-weight: 600; font-size: 0.85rem; text-transform: uppercase; }
        tr:hover { background: rgba(255,255,255,0.03); }
        .severity-critical { color: var(--accent-red); font-weight: 600; }
        .severity-high { color: var(--accent-orange); font-weight: 600; }
        .severity-medium { color: var(--accent-yellow); }
        .severity-low { color: var(--accent-blue); }
        .severity-info { color: var(--accent-gray); }
        .risk-high { color: var(--accent-red); }
        .risk-medium { color: var(--accent-orange); }
        .risk-low { color: var(--accent-green); }
        .risk-tooltip { cursor: help; text-decoration: underline dotted; }
        .identity-high { color: var(--accent-green); }
        .identity-medium { color: var(--accent-yellow); }
        .identity-low { color: var(--accent-red); }
        .section { margin-bottom: 2rem; }
        .section-title { font-size: 1.2rem; margin-bottom: 1rem; padding-bottom: 0.5rem; border-bottom: 1px solid var(--border-color); }
        .badge { display: inline-block; padding: 0.2rem 0.6rem; border-radius: 4px; font-size: 0.75rem; font-weight: 600; }
        .badge-critical { background: rgba(231,76,60,0.2); color: var(--accent-red); }
        .badge-high { background: rgba(243,156,18,0.2); color: var(--accent-orange); }
        .badge-medium { background: rgba(241,196,15,0.2); color: var(--accent-yellow); }
        .badge-low { background: rgba(52,152,219,0.2); color: var(--accent-blue); }
        .badge-info { background: rgba(127,140,141,0.2); color: var(--accent-gray); }
        footer { text-align: center; color: var(--text-secondary); font-size: 0.85rem; padding-top: 2rem; border-top: 1px solid var(--border-color); }
        canvas { max-height: 300px; }
        .sortable { cursor: pointer; user-select: none; }
        .sortable:hover { color: var(--text-primary); }
        .sortable::after { content: ' ‚áÖ'; opacity: 0.5; }
        .meta-grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(260px, 1fr)); gap: 1rem; }
        .meta-item { background: var(--bg-card); border-radius: 8px; padding: 1rem; border: 1px solid var(--border-color); }
        .meta-item h4 { font-size: 0.95rem; margin-bottom: 0.75rem; color: var(--text-secondary); }
        .meta-item ul { list-style: none; margin: 0; padding: 0; }
        .meta-item li { display: flex; justify-content: space-between; gap: 0.5rem; font-size: 0.85rem; padding: 0.2rem 0; color: var(--text-secondary); }
        .meta-item li span { color: var(--text-primary); }
        .tag-list { display: flex; flex-wrap: wrap; gap: 0.35rem; }
        .tag { background: rgba(52,152,219,0.15); color: var(--accent-blue); padding: 0.15rem 0.45rem; border-radius: 12px; font-size: 0.7rem; }
        /* New: Expandable rows */
        .expandable { cursor: pointer; }
        .expandable:hover { background: rgba(255,255,255,0.05); }
        .expandable::before { content: '‚ñ∂ '; font-size: 0.7rem; opacity: 0.5; }
        .expandable.open::before { content: '‚ñº '; }
        .details-row { display: none; }
        .details-row.open { display: table-row; }
        .details-cell { background: var(--bg-card); padding: 1rem !important; }
        .observations { list-style: none; margin: 0; padding: 0; }
        .observations li { padding: 0.3rem 0; border-bottom: 1px solid var(--border-color); font-size: 0.85rem; color: var(--text-secondary); }
        .observations li:last-child { border-bottom: none; }
        .observations li::before { content: '‚Ä¢ '; color: var(--accent-blue); }
        /* Playbook cards */
        .playbook-grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(280px, 1fr)); gap: 1rem; }
        .playbook-card { background: var(--bg-card); border-radius: 8px; padding: 1rem; border: 1px solid var(--border-color); }
        .playbook-card h5 { font-size: 0.9rem; color: var(--accent-green); margin-bottom: 0.5rem; }
        .playbook-card .ip { font-size: 0.8rem; color: var(--text-secondary); }
        /* Artifact pills */
        .artifact-list { display: flex; flex-wrap: wrap; gap: 0.5rem; }
        .artifact-pill { background: rgba(46,204,113,0.15); color: var(--accent-green); padding: 0.4rem 0.8rem; border-radius: 6px; font-size: 0.8rem; }
        /* Reason tags */
        .reason-tag { background: rgba(243,156,18,0.15); color: var(--accent-orange); padding: 0.25rem 0.6rem; border-radius: 4px; font-size: 0.75rem; margin-right: 0.5rem; margin-bottom: 0.5rem; display: inline-block; }
    </style>
</head>
<body>
    <div class="container">
        <header>
            <div>
                <h1>üî¥ RedAudit Report</h1>
                <div class="meta">
                    Target: <strong>{{ target }}</strong> | Mode: {{ scan_mode }} | Generated: {{ generated_at }}
                    {% if auditor_name %}| Auditor: <strong>{{ auditor_name }}</strong>{% endif %}
                </div>
            </div>
            <div class="meta">v{{ version }}</div>
        </header>

        <div class="cards">
            <div class="card">
                <div class="card-title">Hosts Discovered</div>
                <div class="card-value">{{ summary.hosts_found or host_count }}</div>
            </div>
            <div class="card">
                <div class="card-title">Hosts Scanned</div>
                <div class="card-value">{{ summary.hosts_scanned or host_count }}</div>
            </div>
            <div class="card">
                <div class="card-title">Total Findings</div>
                <div class="card-value">{{ finding_count }}</div>
            </div>
            <div class="card">
                <div class="card-title">Deep Scans</div>
                <div class="card-value">{{ smart_scan.deep_scan_executed or 0 }}</div>
            </div>
            <div class="card">
                <div class="card-title">Agentless Verified</div>
                <div class="card-value">{{ pipeline.agentless_verify.completed or 0 }}</div>
            </div>
            <div class="card">
                <div class="card-title">Nuclei Findings</div>
                <div class="card-value">{{ pipeline.nuclei.findings or 0 }}</div>
            </div>
            <div class="card">
                <div class="card-title">Critical</div>
                <div class="card-value severity-critical">{{ severity_counts.critical }}</div>
            </div>
            <div class="card">
                <div class="card-title">High</div>
                <div class="card-value severity-high">{{ severity_counts.high }}</div>
            </div>
            <div class="card">
                <div class="card-title">Medium</div>
                <div class="card-value severity-medium">{{ severity_counts.medium }}</div>
            </div>
            <div class="card">
                <div class="card-title">Low / Info</div>
                <div class="card-value">{{ severity_counts.low + severity_counts.info }}</div>
            </div>
        </div>

        <div class="charts">
            <div class="chart-container">
                <div class="chart-title">Severity Distribution</div>
                <canvas id="severityChart"></canvas>
            </div>
            <div class="chart-container">
                <div class="chart-title">Top 10 Ports</div>
                <canvas id="portsChart"></canvas>
            </div>
        </div>

        <div class="section">
            <div class="section-title">Pipeline Overview</div>
            <div class="meta-grid">
                <div class="meta-item">
                    <h4>Host Scan</h4>
                    <ul>
                        <li>Targets <span>{{ pipeline.host_scan.targets or 0 }}</span></li>
                        <li>Scanned <span>{{ pipeline.host_scan.scanned or 0 }}</span></li>
                        <li>Threads <span>{{ pipeline.host_scan.threads or 0 }}</span></li>
                        <li>Mode <span>{{ config_snapshot.scan_mode or scan_mode }}</span></li>
                        <li>Nmap Args <span>{{ pipeline.host_scan.nmap_args or '-' }}</span></li>
                        <li>Nmap Timing <span>{{ pipeline.host_scan.nmap_timing or '-' }}</span></li>
                    </ul>
                </div>
                <div class="meta-item">
                    <h4>Net Discovery</h4>
                    <ul>
                        <li>Enabled <span>{{ 'Yes' if pipeline.net_discovery.enabled else 'No' }}</span></li>
                        <li>Protocols <span>{{ (pipeline.net_discovery.protocols_used or [])|join(', ') }}</span></li>
                        <li>ARP Hosts <span>{{ pipeline.net_discovery.counts.arp_hosts or 0 }}</span></li>
                        <li>HyperScan TCP <span>{{ pipeline.net_discovery.counts.hyperscan_tcp_hosts or 0 }}</span></li>
                        <li>Red Team <span>{{ 'On' if pipeline.net_discovery.redteam_enabled else 'Off' }}</span></li>
                        {% if pipeline.net_discovery.errors %}
                        <li>Errors <span>{{ pipeline.net_discovery.errors|join('; ') }}</span></li>
                        {% endif %}
                    </ul>
                </div>
                <div class="meta-item">
                    <h4>Agentless Verify</h4>
                    <ul>
                        <li>Targets <span>{{ pipeline.agentless_verify.targets or 0 }}</span></li>
                        <li>Completed <span>{{ pipeline.agentless_verify.completed or 0 }}</span></li>
                        <li>SMB <span>{{ pipeline.agentless_verify.signals.smb or 0 }}</span></li>
                        <li>RDP <span>{{ pipeline.agentless_verify.signals.rdp or 0 }}</span></li>
                        <li>HTTP <span>{{ pipeline.agentless_verify.signals.http or 0 }}</span></li>
                    </ul>
                </div>
                <div class="meta-item">
                    <h4>Nuclei</h4>
                    <ul>
                        {% set nuclei = pipeline.nuclei or {} %}
                        <li>Targets <span>{{ nuclei.targets or 0 }}</span></li>
                        <li>Findings <span>{{ nuclei.findings or 0 }}</span></li>
                        {% if nuclei.findings_suspected is not none %}
                        <li>Suspected <span>{{ nuclei.findings_suspected }}</span></li>
                        {% endif %}
                        {% if nuclei.partial %}
                        <li>Timeout batches <span>{{ (nuclei.timeout_batches or [])|length }}</span></li>
                        <li>Failed batches <span>{{ (nuclei.failed_batches or [])|length }}</span></li>
                        {% endif %}
                        {% if nuclei.partial %}
                        <li>Status <span>Partial</span></li>
                        {% elif nuclei.success %}
                        <li>Status <span>OK</span></li>
                        {% elif nuclei.error %}
                        <li>Status <span>Error</span></li>
                        {% else %}
                        <li>Status <span>N/A</span></li>
                        {% endif %}
                    </ul>
                </div>
                <div class="meta-item">
                    <h4>Deep Scan</h4>
                    <ul>
                        <li>Identity Threshold <span>{{ pipeline.deep_scan.identity_threshold or 0 }}</span></li>
                        <li>UDP Mode <span>{{ pipeline.deep_scan.udp_mode or '-' }}</span></li>
                        <li>UDP Top Ports <span>{{ pipeline.deep_scan.udp_top_ports or 0 }}</span></li>
                        {% if pipeline.deep_scan.deep_scan_budget %}
                        <li>Deep Budget <span>{{ pipeline.deep_scan.deep_scan_budget }}</span></li>
                        {% endif %}
                    </ul>
                </div>
                {% set hyperscan_vs_final = pipeline.hyperscan_vs_final or {} %}
                {% if hyperscan_vs_final.by_subnet %}
                <div class="meta-item">
                    <h4>HyperScan vs Final</h4>
                    <ul>
                        {% for subnet, stats in hyperscan_vs_final.by_subnet.items() %}
                        <li>{{ subnet }} <span>{{ stats.hyperscan_ports or 0 }} / {{ stats.final_ports or 0 }} (missed TCP {{ stats.missed_tcp or 0 }}, UDP {{ stats.missed_udp or 0 }})</span></li>
                        {% endfor %}
                    </ul>
                </div>
                {% endif %}
                <div class="meta-item">
                    <h4>Smart Scan</h4>
                    <ul>
                        <li>Hosts <span>{{ smart_scan.hosts or 0 }}</span></li>
                        <li>Identity Avg <span>{{ smart_scan.identity_score_avg or 0 }}</span></li>
                        <li>Deep Triggered <span>{{ smart_scan.deep_scan_triggered or 0 }}</span></li>
                        <li>Deep Executed <span>{{ smart_scan.deep_scan_executed or 0 }}</span></li>
                        {% if smart_scan.deep_scan_budget and smart_scan.deep_scan_budget > 0 %}
                        <li>Deep Budget <span>{{ smart_scan.deep_scan_budget }}</span></li>
                        <li>Skipped by Budget <span>{{ smart_scan.hosts_skipped_by_budget or 0 }}</span></li>
                        {% endif %}
                    </ul>
                </div>
                <div class="meta-item">
                    <h4>Vulnerabilities</h4>
                    <ul>
                        <li>Total <span>{{ pipeline.vulnerability_scan.total or 0 }}</span></li>
                        <li>Sources <span>{{ (pipeline.vulnerability_scan.sources or {})|length }}</span></li>
                        <li>Critical <span>{{ severity_counts.critical }}</span></li>
                        <li>High <span>{{ severity_counts.high }}</span></li>
                    </ul>
                </div>
            </div>
        </div>

        {% if smart_scan_reasons %}
        <div class="section">
            <div class="section-title">üéØ Smart Scan Analysis (Why Deep Scans Triggered)</div>
            <div class="meta-grid">
                <div class="meta-item" style="grid-column: span 2;">
                    <h4>Deep Scan Triggers</h4>
                    <div style="padding: 0.5rem 0;">
                        {% for reason, count in smart_scan_reasons.items() %}
                        <span class="reason-tag">{{ reason.replace('_', ' ').title() }}: {{ count }}</span>
                        {% endfor %}
                    </div>
                    <p style="font-size: 0.8rem; color: var(--text-secondary); margin-top: 0.5rem;">
                        Deep scans are triggered when hosts show suspicious patterns requiring additional investigation.
                    </p>
                </div>
                <div class="meta-item">
                    <h4>Topology</h4>
                    <ul>
                        <li>Default Gateway <span>{{ topology_summary.default_gateway }}</span></li>
                        <li>Interfaces <span>{{ topology_summary.interfaces }}</span></li>
                        <li>Routes <span>{{ topology_summary.routes }}</span></li>
                        {% if topology_summary.routes_list %}
                        <li style="margin-top: 0.5rem;">
                            <details>
                                <summary style="cursor: pointer; color: var(--panel-bg); font-weight: 500;">üìç View route details</summary>
                                <ul style="margin-top: 0.5rem; font-size: 0.85rem;">
                                {% for route in topology_summary.routes_list %}
                                    <li style="margin: 0.25rem 0;">
                                        <code style="background: rgba(0,0,0,0.3); padding: 2px 6px; border-radius: 3px;">
                                            {{ route.dst }}{% if route.via != '-' %} ‚Üí {{ route.via }}{% endif %} ({{ route.dev }})
                                        </code>
                                    </li>
                                {% endfor %}
                                </ul>
                            </details>
                        </li>
                        {% endif %}
                    </ul>
                </div>
            </div>
        </div>
        {% endif %}

        {% if playbooks %}
        <div class="section">
            <div class="section-title">üìã Remediation Playbooks ({{ playbooks|length }})</div>
            <div class="playbook-grid">
                {% for playbook in playbooks %}
                <div class="playbook-card">
                    <h5>{{ playbook.title or playbook.path|basename }}</h5>
                    <p class="ip">{{ playbook.target_ip or playbook.host or '-' }}</p>
                    <details style="margin-top: 0.5rem;">
                        <summary style="cursor: pointer; color: var(--accent-blue); font-size: 0.85rem;">View Steps & Commands</summary>
                        <div style="margin-top: 0.5rem; font-size: 0.85rem; color: var(--text-secondary);">
                            {% if playbook.steps %}
                            <strong style="display: block; margin-bottom: 0.25rem;">Remediation Steps:</strong>
                            <ol style="padding-left: 1.2rem; margin-bottom: 0.75rem;">
                                {% for step in playbook.steps %}
                                <li style="margin-bottom: 0.2rem;">{{ step }}</li>
                                {% endfor %}
                            </ol>
                            {% endif %}

                            {% if playbook.commands %}
                            <strong style="display: block; margin-bottom: 0.25rem;">Suggested Commands:</strong>
                            <pre style="background: rgba(0,0,0,0.3); padding: 0.5rem; border-radius: 4px; overflow-x: auto; color: var(--text-primary); font-family: monospace;">{% for cmd in playbook.commands %}
{{ cmd }}{% endfor %}</pre>
                            {% endif %}

                            {% if playbook.references %}
                            <div style="margin-top: 0.75rem;">
                                <strong>References:</strong><br>
                                {% for ref in playbook.references %}
                                <a href="{{ ref }}" target="_blank" style="color: var(--accent-blue); text-decoration: none; display: block; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;">üîó {{ ref }}</a>
                                {% endfor %}
                            </div>
                            {% endif %}
                        </div>
                    </details>
                </div>
                {% endfor %}
            </div>
        </div>
        {% endif %}

        {% if pcaps %}
        <div class="section">
            <div class="section-title">üìÅ Captured Evidence ({{ pcaps|length }} PCAPs)</div>
            <div class="artifact-list">
                {% for pcap in pcaps %}
                <span class="artifact-pill">{{ pcap.path|basename if pcap.path else pcap }}</span>
                {% endfor %}
            </div>
        </div>
        {% endif %}

        <div class="section">
            <div class="section-title">Hosts ({{ host_count }})</div>
            <table id="hostsTable">
                <thead>
                    <tr>
                        <th class="sortable" data-col="0">IP</th>
                        <th class="sortable" data-col="1">Hostname</th>
                        <th class="sortable" data-col="2">Status</th>
                        <th class="sortable" data-col="3">Ports</th>
                        <th class="sortable" data-col="4">Risk Score</th>
                        <th class="sortable" data-col="5">Identity</th>
                        <th class="sortable" data-col="6">Asset Type</th>
                        <th class="sortable" data-col="7">OS</th>
                        <th>MAC</th>
                        <th>Vendor</th>
                        <th>Tags</th>
                        <th>Agentless</th>
                    </tr>
                </thead>
                <tbody>
                {% for host in host_table %}
                    <tr>
                        <td><code>{{ host.ip }}</code></td>
                        <td>{{ host.hostname }}</td>
                        <td>{{ host.status }}</td>
                        <td>{{ host.ports_count }}</td>
                        <td>
                            {% set bd = host.risk_score_breakdown %}
                            {% if host.risk_score >= 70 %}
                            <span class="risk-high risk-tooltip" title="CVSS: {{ bd.max_cvss|default(0) }} | Base: {{ bd.base_score|default(0) }} | Density: +{{ bd.density_bonus|default(0) }} | Exposure: x{{ bd.exposure_multiplier|default(1.0) }}">{{ host.risk_score }}</span>
                            {% elif host.risk_score >= 40 %}
                            <span class="risk-medium risk-tooltip" title="CVSS: {{ bd.max_cvss|default(0) }} | Base: {{ bd.base_score|default(0) }} | Density: +{{ bd.density_bonus|default(0) }} | Exposure: x{{ bd.exposure_multiplier|default(1.0) }}">{{ host.risk_score }}</span>
                            {% else %}
                            <span class="risk-low risk-tooltip" title="CVSS: {{ bd.max_cvss|default(0) }} | Base: {{ bd.base_score|default(0) }} | Density: +{{ bd.density_bonus|default(0) }} | Exposure: x{{ bd.exposure_multiplier|default(1.0) }}">{{ host.risk_score }}</span>
                            {% endif %}
                        </td>
                        <td>
                            {% set signals = host.identity_signals|join(', ') if host.identity_signals else 'none' %}
                            {% if host.identity_score >= 3 %}
                            <span class="identity-high risk-tooltip" title="Signals: {{ signals }}">{{ host.identity_score }}</span>
                            {% elif host.identity_score >= 2 %}
                            <span class="identity-medium risk-tooltip" title="Signals: {{ signals }}">{{ host.identity_score }}</span>
                            {% else %}
                            <span class="identity-low risk-tooltip" title="Signals: {{ signals }}">{{ host.identity_score }}</span>
                            {% endif %}
                        </td>
                        <td>{{ host.asset_type }}</td>
                        <td>{{ host.os }}</td>
                        <td><code>{{ host.mac }}</code></td>
                        <td>{{ host.vendor }}</td>
                        <td>
                            <div class="tag-list">
                                {% for tag in host.tags.split(',') if tag %}
                                <span class="tag">{{ tag.strip() }}</span>
                                {% endfor %}
                            </div>
                        </td>
                        <td>{{ host.agentless }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

        {% if nuclei_suspected and nuclei_suspected|length > 0 %}
        <div class="section">
            <div class="section-title">Nuclei Suspected ({{ nuclei_suspected|length }}) <span style="font-size: 0.75rem; color: var(--text-secondary); font-weight: normal;">‚Äî Unconfirmed signals for review</span></div>
            <table>
                <thead>
                    <tr>
                        <th>Template</th>
                        <th>Matched URL</th>
                        <th>Reason</th>
                    </tr>
                </thead>
                <tbody>
                {% for item in nuclei_suspected %}
                    <tr>
                        <td><code>{{ item.template_id }}</code></td>
                        <td><code>{{ item.matched_at }}</code></td>
                        <td>{{ item.fp_reason }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        {% endif %}

        <div class="section">
            <div class="section-title">Findings ({{ finding_count }}) <span style="font-size: 0.75rem; color: var(--text-secondary); font-weight: normal;">‚Äî Click row to expand technical details</span></div>
            <table id="findingsTable">
                <thead>
                    <tr>
                        <th class="sortable" data-col="0">Host</th>
                        <th class="sortable" data-col="1">Severity</th>
                        <th class="sortable" data-col="2">Source</th>
                        <th class="sortable" data-col="3">Category</th>
                        <th class="sortable" data-col="4">Title</th>
                        <th class="sortable" data-col="5">Port</th>
                        <th>URL</th>
                        <th>CVE</th>
                    </tr>
                </thead>
                <tbody>
                {% for finding in finding_table %}
                    <tr class="expandable" onclick="this.classList.toggle('open'); this.nextElementSibling.classList.toggle('open');">
                        <td><code>{{ finding.host }}</code></td>
                        <td><span class="badge badge-{{ finding.severity }}">{{ finding.severity|upper }}</span></td>
                        <td>{{ finding.source }}</td>
                        <td>{{ finding.category }}</td>
                        <td>{{ finding.title }}</td>
                        <td>{{ finding.port }}</td>
                        <td><code>{{ finding.url }}</code></td>
                        <td>{{ finding.cve }}</td>
                    </tr>
                    <tr class="details-row">
                        <td colspan="8" class="details-cell">
                            {% if finding.description %}
                            <div style="margin-bottom: 0.75rem;">
                                <strong style="color: var(--text-secondary); font-size: 0.8rem;">Description:</strong>
                                <p style="font-size: 0.9rem; margin-top: 0.2rem;">{{ finding.description }}</p>
                            </div>
                            {% endif %}

                            {% if finding.evidence_meta %}
                            <div style="margin-bottom: 0.75rem;">
                                <strong style="color: var(--text-secondary); font-size: 0.8rem;">Evidence Source:</strong>
                                <span style="font-size: 0.85rem;">{{ finding.evidence_meta.source_tool or finding.source }}</span>
                                {% if finding.evidence_meta.signals %}
                                <span style="font-size: 0.85rem; color: var(--text-secondary);">({{ finding.evidence_meta.signals|join(', ') }})</span>
                                {% endif %}
                                {% if finding.evidence_meta.template_id %}
                                <div style="font-size: 0.85rem; color: var(--text-secondary);">Template ID: {{ finding.evidence_meta.template_id }}</div>
                                {% endif %}
                                {% if finding.evidence_meta.matched_at %}
                                <div style="font-size: 0.85rem; color: var(--text-secondary);">Matched At: {{ finding.evidence_meta.matched_at }}</div>
                                {% endif %}
                                {% if finding.evidence_meta.raw_output_sha256 %}
                                <div style="font-size: 0.85rem; color: var(--text-secondary);">Raw Output SHA256: <code>{{ finding.evidence_meta.raw_output_sha256 }}</code></div>
                                {% endif %}
                                {% if finding.evidence_meta.raw_output_ref %}
                                <div style="font-size: 0.85rem; color: var(--text-secondary);">Raw Output Ref: <code>{{ finding.evidence_meta.raw_output_ref }}</code></div>
                                {% endif %}
                            </div>
                            {% endif %}

                            {% if finding.evidence %}
                            <div style="margin-bottom: 0.75rem;">
                                <strong style="color: var(--text-secondary); font-size: 0.8rem;">Technical Evidence:</strong>
                                <pre style="background: rgba(0,0,0,0.3); padding: 0.5rem; border-radius: 4px; overflow-x: auto; font-size: 0.85rem; color: var(--accent-green); margin-top: 0.25rem; white-space: pre-wrap;">{{ finding.evidence }}</pre>
                            </div>
                            {% endif %}

                            {% if finding.observations %}
                            <strong style="color: var(--text-secondary); font-size: 0.8rem;">Technical Observations:</strong>
                            <ul class="observations" style="margin-bottom: 0.75rem;">
                                {% for obs in finding.observations %}
                                <li>{{ obs }}</li>
                                {% endfor %}
                            </ul>
                            {% endif %}

                            {% if finding.references %}
                            <strong style="color: var(--text-secondary); font-size: 0.8rem;">References:</strong>
                            <div style="display: flex; flex-wrap: wrap; gap: 0.5rem; margin-top: 0.25rem;">
                                {% for ref in finding.references %}
                                <a href="{{ ref }}" target="_blank" style="color: var(--accent-blue); text-decoration: none; font-size: 0.85rem;">üîó {{ ref }}</a>
                                {% endfor %}
                            </div>
                            {% endif %}

                            {% if not finding.description and not finding.evidence and not finding.observations and not finding.references %}
                            <p style="color: var(--text-secondary); font-size: 0.85rem;">No additional technical details available.</p>
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

        <footer>
            <div style="margin-bottom: 0.5rem;">
                Generated by <strong>RedAudit</strong> v{{ version }} ‚Äî {{ generated_at }}
            </div>
            <div style="font-size: 0.75rem; opacity: 0.7;">
                GPLv3 License | ¬© 2026 RedAudit |
                <a href="https://github.com/dorinbadea/RedAudit" style="color: var(--accent-blue);">github.com/dorinbadea/RedAudit</a>
            </div>
        </footer>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.1/dist/chart.umd.min.js"></script>
    <script>
        // Severity Chart
        const severityCtx = document.getElementById('severityChart').getContext('2d');
        new Chart(severityCtx, {
            type: 'doughnut',
            data: {
                labels: ['Critical', 'High', 'Medium', 'Low', 'Info'],
                datasets: [{
                    data: [{{ severity_counts.critical }}, {{ severity_counts.high }}, {{ severity_counts.medium }}, {{ severity_counts.low }}, {{ severity_counts.info }}],
                    backgroundColor: ['#e74c3c', '#f39c12', '#f1c40f', '#3498db', '#7f8c8d'],
                    borderWidth: 0
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: { position: 'right', labels: { color: '#a0a3a8' } }
                }
            }
        });

        // Ports Chart
        const portsCtx = document.getElementById('portsChart').getContext('2d');
        new Chart(portsCtx, {
            type: 'bar',
            data: {
                labels: [{% for port, count in top_ports %}'{{ port }}'{% if not loop.last %}, {% endif %}{% endfor %}],
                datasets: [{
                    label: 'Host Count',
                    data: [{% for port, count in top_ports %}{{ count }}{% if not loop.last %}, {% endif %}{% endfor %}],
                    backgroundColor: '#3498db',
                    borderRadius: 4
                }]
            },
            options: {
                responsive: true,
                indexAxis: 'y',
                plugins: {
                    legend: { display: false }
                },
                scales: {
                    x: { ticks: { color: '#a0a3a8' }, grid: { color: '#3a3f47' } },
                    y: { ticks: { color: '#a0a3a8' }, grid: { display: false } }
                }
            }
        });

        // Simple table sorting
        document.querySelectorAll('.sortable').forEach(th => {
            th.addEventListener('click', () => {
                const table = th.closest('table');
                const tbody = table.querySelector('tbody');
                const rows = Array.from(tbody.querySelectorAll('tr'));
                const col = parseInt(th.dataset.col);
                const asc = th.dataset.asc !== 'true';
                th.dataset.asc = asc;

                rows.sort((a, b) => {
                    const aVal = a.children[col].textContent.trim();
                    const bVal = b.children[col].textContent.trim();
                    const aNum = parseFloat(aVal);
                    const bNum = parseFloat(bVal);

                    if (!isNaN(aNum) && !isNaN(bNum)) {
                        return asc ? aNum - bNum : bNum - aNum;
                    }
                    return asc ? aVal.localeCompare(bVal) : bVal.localeCompare(aVal);
                });

                rows.forEach(row => tbody.appendChild(row));
            });
        });
    </script>
</body>
</html>
